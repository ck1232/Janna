<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
<tiles-definitions>  
    <definition name="main_template"  
        template="/WEB-INF/jsp/template/layout.jsp">  
        <put-attribute name="title" value="" />  
        <put-attribute name="header" value="/WEB-INF/jsp/template/header.jsp" />  
        <put-attribute name="menu" value="/WEB-INF/jsp/template/menu.jsp" />  
        <put-attribute name="footer" value="/WEB-INF/jsp/template/footer.jsp" />  
    </definition>  
    
    <definition name="body_template" extends="main_template">
    	<put-attribute name="body">
        	<definition template="/WEB-INF/jsp/template/body.jsp">
        		<put-attribute name="content" value="/WEB-INF/jsp/template/message.jsp" />
        		<put-attribute name="message" value="/WEB-INF/jsp/template/message.jsp" />  
        	</definition>
        </put-attribute> 
    </definition>
  
    <definition name="contact" extends="main_template">  
        <put-attribute name="title" value="Contact Manager" />
        <put-attribute name="body">
        	<definition template="/WEB-INF/jsp/template/body.jsp">
        		<put-attribute name="content" value="/WEB-INF/jsp/contact.jsp" />
        		<put-attribute name="message" value="/WEB-INF/jsp/template/message.jsp" />
        	</definition>
        </put-attribute>
          
    </definition>  
  
    <definition name="hello" extends="main_template">  
        <put-attribute name="title" value="Hello Spring MVC" />  
        <put-attribute name="body">
        	<definition template="/WEB-INF/jsp/template/body.jsp">
        		<put-attribute name="content" value="/WEB-INF/jsp/hello.jsp" />
        		<put-attribute name="message" value="/WEB-INF/jsp/template/message.jsp" />
        	</definition>
        </put-attribute>
          
    </definition> 
    
    <!-- Common Module START -->
    <definition name="dashboard" extends="main_template">  
        <put-attribute name="title" value="Dashboard" /> 
        <put-attribute name="body">
        	<definition template="/WEB-INF/jsp/template/body.jsp"> 
        		<put-attribute name="content" value="/WEB-INF/jsp/dashboard/dashboard.jsp" />
        	</definition>
        </put-attribute>       
    </definition>  
    <!-- Common Module END -->
    
    <!-- User Management Module START -->
    <definition name="listUser" extends="main_template">  
        <put-attribute name="title" value="User Listing" /> 
        <put-attribute name="body">
        	<definition template="/WEB-INF/jsp/template/body.jsp">
        		<put-attribute name="heading" value="User Listing" />
        		<put-attribute name="content">
        			<definition template="/WEB-INF/jsp/usermanagement/listUser.jsp">
        				<put-attribute name="datatable">
		        			<definition template = "/WEB-INF/jsp/template/datatable.jsp">
		        				<put-attribute name="options" value="/WEB-INF/jsp/usermanagement/options.jsp" />
		        				<put-attribute name="datatable-script">
		        					<definition template="/WEB-INF/jsp/template/datatable-script.jsp" >
		        						<put-attribute name="data-list" value="/JJ/getUserList" />
		        						<put-attribute name="column-mapping" value="/WEB-INF/jsp/usermanagement/column-mapping.jsp" />
		        					</definition>
		        				</put-attribute>
		        				<put-attribute name="column-header" value="/WEB-INF/jsp/usermanagement/column-header.jsp"></put-attribute>
		        			</definition>
        				</put-attribute>
        			</definition>
        		</put-attribute>
        		<put-attribute name="message" value="/WEB-INF/jsp/template/message.jsp" />
        	</definition>
        </put-attribute>
    </definition>
    
    <definition name="createUser" extends="main_template">
    	<put-attribute name="title" value="Add New User" />
    	<put-attribute name="body" value="/WEB-INF/jsp/usermanagement/createUser.jsp" />
    </definition>
    
    <!-- User Management Module END -->  
  
</tiles-definitions>  